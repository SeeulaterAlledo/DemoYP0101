<Window x:Class="DemoYP0101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="OOO Управляющая компания жилого фонда" Height="450" Width="800">
    <Grid>

        <Border VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="60" >
                <TextBlock Text="Авторизация"
                       Margin="40 10"/>

                <TextBox Name="LoginEnter"
                     Margin="20 10"/>

                <PasswordBox Name="PasswordEnter"
                     Margin="20 10"/>

                <Button Name="LoginButton"
                    Content="Войти"
                    Margin="40 10"
                    Click="LoginButton_click"/>

                <TextBlock HorizontalAlignment="Center"
                       Text="Войти как гость"
                       FontSize="15"
                       Foreground="Blue"
                       MouseDown="TextBloxk_MouseDown"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
