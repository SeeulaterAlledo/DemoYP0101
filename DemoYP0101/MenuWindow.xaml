<Window x:Class="DemoYP0101.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoYP0101"
        mc:Ignorable="d"
        Title="Меню" Height="470" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Панель кнопок слева -->
        <StackPanel Grid.Column="0" Background="#F5F5F5">
            <Button x:Name="ApplicationButton" Content="Заявки" Width="200" Height="50" Margin="10,20,10,5" Click="ApplicationButton_Click"/>
            <Button x:Name="ListHousingStockButton" Content="Жилой фонд" Width="200" Height="50" Margin="10,5" Click="ListHousingStockButton_Click"/>
            <Button x:Name="ReportButton" Content="Отчеты" Width="200" Height="50" Margin="10,5" Click="ReportButton_Click"/>
            <Button x:Name="ArrearsButton" Content="Задолженности" Width="200" Height="50" Margin="10,5" Click="ArrearsButton_Click"/>
            <Button x:Name="LogOutButton" Content="Выйти" Width="200" Height="50" Margin="10,150,10,10" Background="#FF6B6B" Foreground="White" Click="LogOutButton_Click"/>
        </StackPanel>

        <!-- Логотип справа -->
        <Image Grid.Column="1" Source="/logo.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="400"/>
    </Grid>
</Window>